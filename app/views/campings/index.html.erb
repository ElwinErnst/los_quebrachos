  <p id="notice"><%= notice %></p>

  <div class="text-center text-3xl my-3 font-semibold">Campings</div>
  <table class="min-w-full divide-y divide-gray-200 border-b border-gray-200">
    <thead class="bg-gray-50">
      <tr>
        <th scope="col" class="px-6 py-3 text-left text-md font-medium text-gray-500 uppercase tracking-wider"> Ubication</th>
        <th scope="col" class="px-6 py-3 text-left text-md font-medium text-gray-500 uppercase tracking-wider">Area</th>
        <th scope="col" class="px-6 py-3 text-left text-md font-medium text-gray-500 uppercase tracking-wider">Tents</th>
        <th scope="col" class="px-6 py-3 text-left text-md font-medium text-gray-500 uppercase tracking-wider">Actions</th>
        
        <th colspan="4"></th>
      </tr>
    </thead>

    <tbody>
      <% @campings.each do |camping| %>
        <tr class="min-w-full divide-y divide-gray-200 border-b border-gray-200">
          <td scope="col" class="px-6 py-3 text-left text-md font-medium text-gray-500 uppercase tracking-wider">
            <%= camping.ubication %><span class="inline-block w-1/3 md:hidden font-bold">
          </td>
          <td scope="col" class="px-6 py-3 text-left text-md font-medium text-gray-500 uppercase tracking-wider">
            <%= camping.area %>
          </td>
          <td scope="col" class="px-6 py-3 text-left text-md font-medium text-gray-500 uppercase tracking-wider">
            <%= camping.tents %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap flex flex-row gap-3 text-base">
            <%= link_to '<div>&#x2630;</div>'.html_safe, camping %>
            <%= link_to '<div>&#9998; </div>'.html_safe, edit_camping_path(camping) %>
            <%= link_to '<div>&#10008;</div>'.html_safe, camping, method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
<%= link_to 'New Camping', new_camping_path, :class=> "w-full flex justify-center py-2 px-4 border border-transparent font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"%>

