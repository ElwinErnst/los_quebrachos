<div>
    <div class='flex max-w-sm w-full bg-white shadow-md rounded-lg overflow-hidden mx-auto'>
        <div class='w-2 bg-gray-800'></div>

        <div class='flex items-center px-2 py-3'>
            <div class="w-full max-w-xs">
<form class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    
    <div class="mb-4">
      <%= f.label :email, :class => "block text-gray-700 text-sm font-bold mb-2" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", :placeholder  => "correo electrónico" %>
    </div>

    <div class="mb-6">
      <%= f.label :password, :class => "block text-gray-700 text-sm font-bold mb-2" %><br />
      <%= f.password_field :password, autocomplete: "current-password", :class => "shadow appearance-none border border-red-500 rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline", :placeholder => "******************" %>
      <p class="text-red-500 text-xs italic">Ingrese la contraseña.</p>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="mb-6">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Ingresar", :class => "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"  %>
    </div>
  <% end %>
</form>
<%= render "devise/shared/links" %>

