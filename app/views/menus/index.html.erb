<p id="notice"><%= notice %></p>

<h1 class="text-3xl">
  Menus
</h1>

<table class="border-collapse w-full">
  <thead>
    <tr>
      <th class="p-3 font-bold uppercase bg-gray-200 text-gray-600 border border-gray-300 hidden lg:table-cell">Breakfast</th>
      <th class="p-3 font-bold uppercase bg-gray-200 text-gray-600 border border-gray-300 hidden lg:table-cell">Lunch</th>
      <th class="p-3 font-bold uppercase bg-gray-200 text-gray-600 border border-gray-300 hidden lg:table-cell">Dinner</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @menus.each do |menu| %>
      <tr class="bg-white lg:hover:bg-gray-100 flex lg:table-row flex-row lg:flex-row flex-wrap lg:flex-no-wrap mb-10 lg:mb-0">
        <td class="w-full lg:w-auto p-3 text-gray-800 text-center border border-b block lg:table-cell relative lg:static"><%= menu.breakfast %></td>
        <td class="w-full lg:w-auto p-3 text-gray-800 text-center border border-b block lg:table-cell relative lg:static"><%= menu.launch %></td>
        <td class="w-full lg:w-auto p-3 text-gray-800 text-center border border-b block lg:table-cell relative lg:static"><%= menu.dinner %></td>

        <td class="text-blue-400 hover:text-blue-600 underline justify-items-center	"></td>
        <td class="text-yellow-400 hover:text-blue-600 underline justify-items-center	"></td>
        <td class="p-3 px-5 flex justify-end">

        <button type="button" class="mr-3 text-sm bg-yellow-500 hover:bg-yellow-700 text-white py-1 px-2 rounded focus:outline-none focus:shadow-outline">
         <%= link_to 'Show', menu %>
        </button>

        <button type="button" class="mr-3 text-sm bg-blue-500 hover:bg-blue-700 text-white py-1 px-2 rounded focus:outline-none focus:shadow-outline">
         <%= link_to 'Edit', edit_menu_path(menu) %>
        </button>

        <button type="button" class="mr-3 text-sm bg-red-500 hover:bg-red-700 text-white py-1 px-2 rounded focus:outline-none focus:shadow-outline">
         <%= link_to 'Destroy', menu, method: :delete, data: { confirm: 'Are you sure?' } %>
        </button>

  
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button class="mx-8 my-2 w-1/3 flex justify-center py-2 px-4 border border-transparent font-medium rounded-md text-white bg-green-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 
focus:ring-offset-2 focus:ring-green-800 items-center"><%= link_to 'New Menu', new_menu_path %></button>


