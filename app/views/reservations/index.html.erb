<p id="notice"><%= notice %></p>

<h1 class="text-3xl">
  Reservations
</h1>

<table class="border-collapse w-full">
  <thead>
    <tr>
      <th class="p-3 font-bold uppercase bg-gray-200 text-gray-600 border border-gray-300 hidden lg:table-cell" >Nombre de Usuario</th>
      <th class="p-3 font-bold uppercase bg-gray-200 text-gray-600 border border-gray-300 hidden lg:table-cell">Fecha Inicio</th>
      <th class="p-3 font-bold uppercase bg-gray-200 text-gray-600 border border-gray-300 hidden lg:table-cell">Fecha Final</th>
      <th class="p-3 font-bold uppercase bg-gray-200 text-gray-600 border border-gray-300 hidden lg:table-cell"><%= link_to 'cabaña', cabins_path  %></th>
      <th class="p-3 font-bold uppercase bg-gray-200 text-gray-600 border border-gray-300 hidden lg:table-cell"><%= link_to 'baño', bathrooms_path  %></th>
      <th class="p-3 font-bold uppercase bg-gray-200 text-gray-600 border border-gray-300 hidden lg:table-cell"><%= link_to 'menu', menus_path  %></th>
      <th class="p-3 font-bold uppercase bg-gray-200 text-gray-600 border border-gray-300 hidden lg:table-cell"><%= link_to 'salon', rooms_path  %></th>
      <th class="p-3 font-bold uppercase bg-gray-200 text-gray-600 border border-gray-300 hidden lg:table-cell"><%= link_to 'acampada', campings_path  %></th>
      <th class="p-3 font-bold uppercase bg-gray-200 text-gray-600 border border-gray-300 hidden lg:table-cell">Centro Deportivo</th>
      <th class="p-3 font-bold uppercase bg-gray-200 text-gray-600 border border-gray-300 hidden lg:table-cell">Provincia</th>
      <th class="p-3 font-bold uppercase bg-gray-200 text-gray-600 border border-gray-300 hidden lg:table-cell">Camping</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
      <tr class="bg-white lg:hover:bg-gray-100 flex lg:table-row flex-row lg:flex-row flex-wrap lg:flex-no-wrap mb-10 lg:mb-0"> 
        <td><%= reservation.user_id %></td>
        <td><%= reservation.start_date %></td>
        <td><%= reservation.end_date %></td>
        <td><%= reservation.pool %></td>
        <td><%= reservation.sport_center %></td>
        <td><%= reservation.state_id %></td>
        <td><%= reservation.camping_id %></td>

        <button type="button" class="mr-3 text-sm bg-yellow-500 hover:bg-yellow-700 text-white py-1 px-2 rounded focus:outline-none focus:shadow-outline"">
          <%= link_to 'Show', reservation %>
        </button>
        <button type="button" class="mr-3 text-sm bg-blue-500 hover:bg-blue-700 text-white py-1 px-2 rounded focus:outline-none focus:shadow-outline"">
          <%= link_to 'Edit', edit_reservation_path(reservation) %>
        </button>
        <button type="button" class="text-sm bg-red-500 hover:bg-red-700 text-white py-1 px-2 rounded focus:outline-none focus:shadow-outline">
          <%= link_to 'Destroy', reservation, method: :delete, data: { confirm: 'Are you sure?' } %> %>
        </button>
        
  
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button class="mx-8 my-2 w-1/3 flex justify-center py-2 px-4 border border-transparent font-medium rounded-md text-white bg-green-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 
focus:ring-offset-2 focus:ring-green-800 flex items-center">  <%= link_to 'Nueva Reserva', new_reservation_path %> </button>



