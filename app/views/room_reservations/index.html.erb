<p id="notice"><%= notice %></p>

<h1>Room Reservations</h1>

<table>
  <thead>
    <tr>
      <th>Reservation</th>
      <th>Room</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @room_reservations.each do |room_reservation| %>
      <tr>
        <td><%= room_reservation.reservation_id %></td>
        <td><%= room_reservation.room_id %></td>
        <td><%= room_reservation.date %></td>
        <td><%= link_to 'Show', room_reservation %></td>
        <td><%= link_to 'Edit', edit_room_reservation_path(room_reservation) %></td>
        <td><%= link_to 'Destroy', room_reservation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

